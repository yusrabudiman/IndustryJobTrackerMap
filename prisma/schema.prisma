generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum CompanyStatus {
  APPLIED
  INTERVIEW
  OFFERED
  JOINED
  REJECTED
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String
  password  String
  createdAt DateTime  @default(now())
  companies Company[]
}

model Company {
  id              String        @id @default(cuid())
  name            String
  subSector       String
  latitude        Float
  longitude       Float
  status          CompanyStatus
  ratingSalary    Int
  ratingStability Int
  ratingCulture   Int
  notes           String?
  isPublic        Boolean       @default(false)
  createdAt       DateTime      @default(now())
  userId          String
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
