generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String    @id @default(cuid())
  email       String    @unique
  name        String
  password    String
  role        Role      @default(USER)
  isActive    Boolean   @default(true)
  lastLoginAt DateTime?
  createdAt   DateTime  @default(now())
  companies   Company[]
}

enum Role {
  USER
  ADMIN
}

model Company {
  id              String        @id @default(cuid())
  name            String
  subSector       String
  latitude        Float
  longitude       Float
  status          CompanyStatus
  ratingSalary    Int
  ratingStability Int
  ratingCulture   Int
  notes           String?
  createdAt       DateTime      @default(now())
  isPublic        Boolean       @default(false)
  userId          String
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum CompanyStatus {
  APPLIED
  INTERVIEW
  OFFERED
  JOINED
  REJECTED
}
