generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum CompanyStatus {
  APPLIED
  INTERVIEW
  OFFERED
  JOINED
  REJECTED
}

model Company {
  id              String        @id @default(cuid())
  name            String
  subSector       String
  latitude        Float
  longitude       Float
  status          CompanyStatus
  ratingSalary    Int
  ratingStability Int
  ratingCulture   Int
  notes           String?
  createdAt       DateTime      @default(now())
}
